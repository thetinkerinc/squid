datasource db {
  url = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output = "../generated"
}

enum EntryType {
  expense
  income
  withdrawal
}

enum AccountType {
  bank
  cash
}

enum CurrencyType {
  CAD
  EUR
  MXN
  USD
}

model Entry {
  id String @id @default(dbgenerated("gen_random_uuid()"))
  user String
  created DateTime @default(now())
  type EntryType
  account AccountType
  enteredAmount Float
  enteredCurrency String
  category String
  description String?

  @@index(fields: [user])
}

model Invitation {
  id String @id @default(dbgenerated("gen_random_uuid()"))
  from String
  to String
  sent DateTime @default(now())
  accepted Boolean?
}

model Currency {
  id String @id @default(dbgenerated("gen_random_uuid()"))
  code CurrencyType
  name String
  symbol String
  value Float
}
